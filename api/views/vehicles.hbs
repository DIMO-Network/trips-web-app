<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{Title}}</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #000000; /* Changed to black */
            color: #ffffff; /* Text color set to white */
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #30D5C8; /* Changed to teal */
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            color: #ffffff; /* Ensuring text is readable on dark backgrounds */
        }

        th {
            background-color: #333333; /* Darker background for headers */
            color: #30D5C8; /* Teal text */
            font-weight: bold;
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #30D5C8; /* Teal border */
        }

        td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #222222; /* Slightly lighter than the background for visibility */
        }


        tr:nth-child(even) {
            background-color: #121212; /* Even darker for zebra-striping */
        }

        tr:hover {
            background-color: #1a1a1a; /* Hover effect for rows */
        }


        .link-button {
            background: none;
            border: none;
            color: #30D5C8; /* Teal text */
            text-decoration: underline;
            cursor: pointer;
            font-size: inherit;
        }

        .link-button:hover {
            color: #35deda; /* Slightly lighter teal for hover effect */
            text-decoration: none;
        }
        .feedback-button, .session-button {
            padding: 10px 20px;
            background-color: #30D5C8; /* Teal background */
            color: #000000; /* Black text */
            border: none;
            border-radius: 20px; /* Rounded corners */
            cursor: pointer;
            font-size: 16px;
            text-decoration: none;
            display: inline-block;
            margin-right: 10px; /* Added spacing between buttons */
            transition: background-color 0.3s ease; /* Smooth transition for hover effects */
        }

        .feedback-button:hover, .session-button:hover {
            background-color: #35deda; /* Slightly lighter teal for hover effect */
        }

        .title-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .sidebar {
            background-color: #000;
            color: #fff;
            /* Other styles */
        }

        .sidebar a {
            /* Styles for links */
        }

        .sidebar a.active, .sidebar a:hover {
            background-color: #30D5C8;
            color: #000;
            /* Other styles */
        }

        /* Main Content Area */
        .main-content {
            background-color: #000;
            color: #fff;
            /* Other styles */
        }

        .vehicle-box {
            background-color: #222; /* Or slightly lighter than the background for visibility */
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 10px;
            /* Other styles */
        }

        /* Typography */
        body, button, a {
            font-family: 'Open Sans', Arial, sans-serif;
            /* Other styles */
        }

        h1, h2, h3 {
            color: #30D5C8;
            /* Other styles */
        }

        /* Interactivity */
        button:hover, a.button:hover {
            background-color: #30D5C8;
            color: #000;
            /* Other styles */
        }


    </style>
</head>
<body>
<div class="title-container">
  <h1>{{Title}}</h1>
  <div>
    <button class="session-button" onclick="window.location.href='/account'">My Current Session</button>
    <button class="session-button" onclick="window.location.href='/streamr'">Live Data</button>
    <a href="/give-feedback" class="session-button" target="_blank">Give us Feedback!</a>
  </div>
</div>
{{#if Vehicles}}
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Device Status</th>
            <th>Trips</th>
        </tr>
        </thead>
        <tbody>
        {{#each Vehicles}}
            <tr>
                <td>{{this.TokenID}}</td>
                <td>{{this.Definition.make}}</td>
                <td>{{this.Definition.model}}</td>
                <td>{{this.Definition.year}}</td>
                <td>
                    <button class="link-button" onclick="window.location.href='/vehicles/{{this.TokenID}}/status'">View Device Status</button>
                </td>
                <td>
                    <button class="link-button" onclick="window.location.href='/vehicles/{{this.TokenID}}/trips'">View Trips</button>
                </td>
                <td>
                     <button class="link-button" onclick="window.location.href='/vehicles/{{this.TokenID}}/live'">Live Streamr</button>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{else}}
    <p>No vehicles to display.</p>
{{/if}}
{{#if SharedVehicles}}
    <h2>Vehicles Shared With Me</h2>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Device Status</th>
            <th>Trips</th>
        </tr>
        </thead>
        <tbody>
        {{#each SharedVehicles}}
            <tr>
                <td>{{this.TokenID}}</td>
                <td>{{this.Definition.make}}</td>
                <td>{{this.Definition.model}}</td>
                <td>{{this.Definition.year}}</td>
                <td>
                    <button class="link-button" onclick="window.location.href='/vehicles/{{this.TokenID}}/status'">View Device Status</button>
                </td>
                <td>
                    <button class="link-button" onclick="window.location.href='/vehicles/{{this.TokenID}}/trips'">View Trips</button>
                </td>
                <td>
                    <button class="link-button" onclick="window.location.href='/vehicles/{{this.TokenID}}/live'">Live Streamr</button>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{else}}
    <p>No shared vehicles to display.</p>
{{/if}}
</body>
</html>